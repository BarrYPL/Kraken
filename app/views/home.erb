<div class="content">
  <h2>Dashboard</h2>
  <h3>Logged in as: <%= $usersDB.select(:username).where(:id => session[:user_id]).first[:username] %></h3>
  <p>We got <%= Client.quantity %> clients connected.</p>
</div>
<div class="clients">
  <p class="grey-text">Client list</p>
  <% if Client.quantity > 0 %>
  <a href="/refresh"><button type="button" name="button" id="button">Refresh</button></a>
  <div class="client-list">
    <% $clientsList.each do |lClient|%>
      <%= erb :client_partial, locals: {lClient: lClient} %>
    <% end %>
  </div>
  <% else  %>
    <div class="no-clients">
      <h2>EMPTY :(</h2>
      <button type="button" onclick="reload();" ><i class="fa-solid fa-arrows-rotate"></i>Refresh</button>
    </div>
  <% end %>
</div>
<script type="text/javascript">
  function reload(){
    location.reload();
  }
</script>
