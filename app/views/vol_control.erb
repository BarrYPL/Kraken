<div class="volcontrol">
  <div class="box">
    <form class="box-content" action="javascript:;" onsubmit='sendReq("volup")'>
      <input type="hidden" name="client_id" value="<%= $clientsList[params[:client].to_i].id %>">
      <input type="hidden" name="request" value="vcontrol">
      <button type="submit">
      <div class="icon-div">
        <i class="fa-solid fa-volume-high fa-2xl"></i>
      </div>
      <p>Volume Up</p></button>
    </form>
  </div>
  <div class="box">
    <form class="box-content" action="javascript:;" onsubmit='sendReq("voldw")'>
      <input type="hidden" name="client_id" value="<%= $clientsList[params[:client].to_i].id %>">
      <input type="hidden" name="request" value="vcontrol">
      <button type="submit">
      <div class="icon-div">
        <i class="fa-solid fa-volume-low fa-2xl"></i>
      </div>
      <p>Volume Down</p></button>
    </form>
  </div>
  <div class="box">
    <form class="box-content" action="javascript:;" onsubmit='sendReq("mute")'>
      <input type="hidden" name="client_id" value="<%= $clientsList[params[:client].to_i].id %>">
      <input type="hidden" name="request" value="vcontrol">
      <button type="submit">
      <div class="icon-div">
        <i class="fa-solid fa-volume-xmark fa-2xl"></i>
      </div>
      <p>Volume Mute</p></button>
    </form>
  </div>
</div>
<div class="goback">
  <a href="/panel?client=<%= $clientsList[params[:client].to_i].id %>"><i class="fa-solid fa-house"></i> Go back</a>
</div>
<script>
  function sendReq(post_data) {
    const xhr = new XMLHttpRequest();
    xhr.open("POST", "/vcontrol", true);
    xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
    xhr.send("request="+post_data);
}
</script>
